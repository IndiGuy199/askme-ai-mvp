{
  "version": 2,
  "builds": [
    { "src": "web/package.json", "use": "@vercel/next" },
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "functions/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/$1.js"
    },
    {
      "src": "/functions/(.*)",
      "dest": "functions/$1.js"
    }
  ]
}
